
@{
    ViewBag.Title = "Home Page";
}



@* slider *@
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/slider images/reaching-into-the-universe-digital-art-hd-wallpaper-1920x1080-3211-e1463599462797.jpg" />
        </div>

        <div class="item">
            <img src="~/Content/slider images/Futureland-time-travel-38682148-1600-900.jpg" />
        </div>

        <div class="item">
            <img src="~/Content/slider images/reaching-into-the-universe-digital-art-hd-wallpaper-1920x1080-3211-e1463599462797.jpg" />
        </div>

        <div class="item">
            <img src="~/Content/slider images/240_F_106004614_7jXzRQlKZaZWvstl1UqrRNg29EEYUSbS.jpg" />
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
    <div class="open_account_btn">
        Open an account <i class="ion-chevron-right"></i>
    </div>
</div>

<div id="content-slider" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/slider images/2017-09-06_1736_001.png" />
        </div>

        <div class="item">
            <img src="~/Content/slider images/2017-09-06_1736_001.png" />
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#content-slider" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#content-slider" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
    @* open account area *@
    <div class="open_account_panel">
        <div class="container">
            <form>
                <div class="col-md-4 text-right">
                    <label>Open An Account</label>
                </div>
                <div class="col-md-4">
                    <input type="email" id="email" required class="form-control" autofocus />
                </div>
                <div class="col-md-4 text-left">
                    <button type="submit" class="next">
                        Next
                    </button>
                    <a class="close_account_panel">
                        <i class="ion-close-round"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

